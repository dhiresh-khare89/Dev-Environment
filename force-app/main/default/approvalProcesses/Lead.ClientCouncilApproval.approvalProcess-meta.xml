<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>C_M_Team</submitter>
        <type>group</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>NewClientNo__c</field>
        <field>Name</field>
        <field>New_Client_Record__c</field>
        <field>Sector__c</field>
        <field>Expertise__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>ClientCouncilTeam</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval Team</label>
        <name>ApprovalTeam</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Submit_For_Client_Council_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approval_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ClientCouncilStatusApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_alert_on_Client_Council_Approval</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>ApprovalRejectedDate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>ClientCouncilStatusRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Email_alert_on_Client_Council_Rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Email_Alert_to_client_council_user_on_submit_for_CC_approval</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Client Council Approval</label>
    <processOrder>2</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
