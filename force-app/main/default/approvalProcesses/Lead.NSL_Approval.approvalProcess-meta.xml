<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>NewClientNo__c</field>
        <field>Name</field>
        <field>New_Client_Record__c</field>
        <field>Sector__c</field>
        <field>Expertise__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>NSL__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval Team</label>
        <name>Approval_Team</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Submit_For_NSL_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Lead.Have_you_met_with_client__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Email_alert_to_C_M_Team_on_NSL_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Email_on_NSL_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>NSL_Approval_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>NSL_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_new_client_status_to_client_take</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Email_alert_on_NSL_rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>NSL_Approval_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>NSL_Rejected_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>NSL Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
