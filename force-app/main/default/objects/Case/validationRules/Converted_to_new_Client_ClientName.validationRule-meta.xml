<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Converted_to_new_Client_ClientName</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status , &quot;Converted to New Client&quot;),
ISCHANGED(Status))
&amp;&amp;
 ISBLANK(Client_Name__c)</errorConditionFormula>
    <errorDisplayField>Client_Name__c</errorDisplayField>
    <errorMessage>Please fill the Client Name.</errorMessage>
</ValidationRule>
